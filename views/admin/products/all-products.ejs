<%- include('../../shared/includes/head',{pageTitle:'All products'}) %>
<link rel="stylesheet" href="/styles/form.css">
<link rel="stylesheet" href="/styles/auth.css">
<link rel="stylesheet" href="/styles/product.css">
<script src="/scripts/delete-product.js" defer></script>
</head>
    <body>
        <%- include('../../shared/includes/header') %>
        <main>
            <h1> All products (admin)</h1>
            <section>
                <h2 >Manage your product <%= products.image %></h2>
            </section>
            <section>
                <p> <a href="/admin/products/add" class="btn btn-warning btn-sm">Add new product</a> </p>
            </section>
            <section>
                <ul id="product-grid">
                <% for (const product of products){ %>
                    <li >
                        <%- include('../../shared/includes/product-item',{product:product}) %>
                    </li>
                <%} %>
                </ul>
            </section>
        </main>
    </body>
