<%- include('../../shared/includes/head',{pageTitle:'signup'}) %>
<link rel="stylesheet" href="/styles/form.css">
<link rel="stylesheet" href="/styles/auth.css">
</head>

    <body>
        <%- include('../../shared/includes/header') %>
        <main>
            <h1> Create New Account</h1>
            <% if(inputData.errorMsg) {%>
                <section class="alert">
                    <p>Invalid input</p>
                    <p><%= inputData.errorMsg %></p>
                </section>
            <%}%>
            <form action="/signup" method="POST">
                <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
            <p>
                <label for="email">Email</label>
                <input type="email" id="email" name="email" value="<%= inputData.email %>" required>
            </p>  
            <p>
                <label for="confirmEmail">Confirm Email</label>
                <input type="email" id="confirmEmail" name="confirmEmail" value="<%= inputData.confirmEmail %>" required>
            </p> 
            <p>
                <label for="password">Password</label>
                <input type="password" id="password" name="password" minlength="6" value="<%= inputData.password %>" required>
            </p> 
            <hr>
            <p>
                <label for="fullname">Full Name</label>
                <input type="text" id="fullname" name="fullname" value="<%= inputData.fullname %>"  required>
            </p> 
            <p>
                <label for="address">Address</label>
                <input type="text" id="address" name="address" value="<%= inputData.address %>"  required>
            </p> 
            <p>
                <label for="street">Street</label>
                <input type="text" id="street" name="street" value="<%= inputData.street %>" required>
            </p>
            <p>
                <label for="postal">Postal Code</label>
                <input type="text" id="postal" name="postal" minlength="5" maxlength="5"  value="<%= inputData.postal %>" required>
            </p>
            <p>
                <label for="city">City</label>
                <input type="text" id="city" name="city"value="<%= inputData.city %>" required>
            </p>
            <button class="btn btn-warning btn-sm"> Create Account </button>
            <p id="switch-to-login" ><a href="/login">Already have account</a></p>
            </form>
        </main>
    </body>
<%- include('../../shared/includes/footer') %>

