<article class="cart-item">
    <div class="cart-item-info">
        <h2> <%=item.product.title%></h2>
        <p>Total Price: $<span class="cart-item-total-price"><%=item.totalPrice.toFixed(2)%></span><span class="cart-product-price">($<%=item.product.price%>)</span></p>
    </div>

    <form class="cart-item-management" data-productid="<%= item.product.id %>" data-csrftoken="<%= locals.csrfToken %>">
        <input type="number" value="<%= item.quantity %>"  required>
        <button class="btn btn-warning btn-sm">Update</button>
    </form>
</article>